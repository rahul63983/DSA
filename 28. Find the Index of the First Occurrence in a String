class Solution {
    public int strStr(String haystack, String needle) {

        if(needle.length()>haystack.length())
            return -1;
            String s="";
        char c=needle.charAt(0);
        for(int i=0;i<haystack.length();i++)
        {
            char ch=haystack.charAt(i);
            if(ch==c)
            {
                try{
                    s=haystack.substring(i,needle.length()+i);
                }catch(Exception e)
                {
                    return -1;
                }
                if(s.equals(needle))
                {
                    return i;
                }
            }
        }
    

      return -1;
    }
}
